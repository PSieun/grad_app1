<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/backg" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="400dp"
            android:background="@color/black"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:onClick="menuShow"
            app:srcCompat="@drawable/menu" />

        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="339dp"
            android:background="@color/black"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:onClick="calendarShow"
            app:srcCompat="@drawable/calendar"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:visibility="invisible"
            android:layout_marginTop="85dp" />

        <ImageButton
            android:id="@+id/moon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="279dp"
            android:background="@color/black"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/moon" />

        <ImageButton
            android:id="@+id/costel"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="218dp"
            android:background="@color/black"
            android:contentDescription="@string/app_name"
            android:visibility="invisible"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/costel" />




        <ImageButton
            android:id="@+id/galaxy"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="159dp"
            android:background="@color/black"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:onClick="galaxyShow"
            app:srcCompat="@drawable/galaxy"/>

        <ImageView
            android:id="@+id/galaxy_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/galaxy_bg" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="666dp"
            android:backgroundTint="@color/black"
            android:visibility="invisible"
            android:text="뒤로가기" />




        <ImageButton
            android:id="@+id/inform"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="101dp"
            android:contentDescription="@string/app_name"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:onClick="inforShow"
            app:srcCompat="@drawable/inform" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="230dp"
            android:backgroundTint="@color/black"
            android:text="날씨 정보"
            android:textSize="13sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="460dp"
            android:backgroundTint="@color/black"
            android:visibility="invisible"
            android:text="오늘의   천문대" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="230dp"
            android:backgroundTint="@color/black"
            android:text="상품추천"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="460dp"
            android:backgroundTint="@color/black"
            android:visibility="invisible"
            android:text="천체관측    정보" />

        <ImageView
            android:id="@+id/infor_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            android:src="@drawable/infor_bg" />

        <Button
            android:id="@+id/backbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/black"
            android:visibility="invisible"
            android:text="뒤로가기" />


    </RelativeLayout>
</LinearLayout>